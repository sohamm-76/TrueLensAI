# Copy this file to: backend/.env

# Backend server
PORT=5000
NODE_ENV=development

# If you have a frontend URL (optional)
FRONTEND_URL=http://localhost:3000

# Firebase Admin / Firestore
# Put your service account JSON at backend/firebase-key.json (recommended),
# or point to it with FIREBASE_SERVICE_ACCOUNT_PATH.
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-key.json

# Google Gemini API key
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key

# Optional: Serper (Google Search API) for claim verification
SERPER_API_KEY=



