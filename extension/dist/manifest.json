{
  "manifest_version": 3,
  "name": "TrueLensAI",
  "version": "1.0.0",
  "description": "Verify news reliability and chat with TrueLensGPT - Your intelligent news fact-checker",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "TrueLensAI - News Verification"
  },
  "icons": {
    "16": "icons/icon-128.svg",
    "48": "icons/icon-128.svg",
    "128": "icons/icon-128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*", "icons/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "oauth2": {
    "client_id": "REPLACE_WITH_YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
